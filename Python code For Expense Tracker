class ExpenseTracker:
    def __init__(self):
        self.budget = 0
        self.earnings = []
        self.expenses = []

    def set_budget(self, amount):
        self.budget = amount
        print(f"‚úÖ Budget set to ‚Çπ{amount}")

    def add_earning(self, amount, source):
        self.earnings.append({"amount": amount, "source": source})
        print(f"üí∞ Added earning of ‚Çπ{amount} from {source}")

    def add_expense(self, amount, category):
        self.expenses.append({"amount": amount, "category": category})
        print(f"üí∏ Added expense of ‚Çπ{amount} for {category}")

    def view_summary(self):
        total_earnings = sum(item["amount"] for item in self.earnings)
        total_expenses = sum(item["amount"] for item in self.expenses)
        balance = self.budget + total_earnings - total_expenses

        print("\nüìä --- Summary ---")
        print(f"Budget: ‚Çπ{self.budget}")
        print(f"Total Earnings: ‚Çπ{total_earnings}")
        print(f"Total Expenses: ‚Çπ{total_expenses}")
        print(f"Remaining Balance: ‚Çπ{balance}")
        print("-------------------\n")

    def view_details(self):
        print("\nüí∞ Earnings:")
        for earning in self.earnings:
            print(f"- ‚Çπ{earning['amount']} from {earning['source']}")

        print("\nüí∏ Expenses:")
        for expense in self.expenses:
            print(f"- ‚Çπ{expense['amount']} on {expense['category']}")
        print()

# ---------- Main Function ----------
def main():
    tracker = ExpenseTracker()

    while True:
        print("-------- Expense Tracker --------")
        print("1. Set Budget")
        print("2. Add Earning")
        print("3. Add Expense")
        print("4. View Summary")
        print("5. View Details")
        print("6. Exit")

        choice = input("Enter your choice (1-6): ")

        if choice == '1':
            amount = float(input("Enter your total budget amount: ‚Çπ"))
            tracker.set_budget(amount)

        elif choice == '2':
            amount = float(input("Enter earning amount: ‚Çπ"))
            source = input("Enter source of earning: ")
            tracker.add_earning(amount, source)

        elif choice == '3':
            amount = float(input("Enter expense amount: ‚Çπ"))
            category = input("Enter expense category: ")
            tracker.add_expense(amount, category)

        elif choice == '4':
            tracker.view_summary()

        elif choice == '5':
            tracker.view_details()

        elif choice == '6':
            print("Exiting Expense Tracker. Goodbye!")
            break

        else:
            print("‚ùå Invalid choice. Please try again.")

# ---------- Run the program ----------
if __name__ == "__main__":
    main()
